
<h1>Update meaning: <br><br> <%= @definition.meaning %></h1>

<form action="/words/<%= @word.id %>/definitions/<%= @definition.definition_id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name"></label>
  <input id="name" name="name" type="text" required>
  <button type="submit">Change Definition</button>
</form>
<br>
<form action="/words/<%= @word.id %>/definitions/<%= @definition.definition_id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Remove Definition</button>
</form>

<h3><a href="/words/<%= @word.id %>">Return to Word</a></h3>
